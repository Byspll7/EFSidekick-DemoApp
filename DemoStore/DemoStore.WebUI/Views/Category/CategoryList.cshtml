 @model List<DemoStore.WebUI.Category>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Category</th>
            <th>Status</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach(var item in Model)
        {
           <tr>
               <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryStatus</td>
                <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Delete</a></td>
                <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Update</a></td>
            </tr> 
        }
    </table>
    <a href="/Category/CreateCategory" class="btn btn-primary">New Category</a>
</div>

